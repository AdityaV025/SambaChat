<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_message_background"
                android:text="Message"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="50dp"/>

            <ImageView
                android:id="@+id/received_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginEnd="50dp"
                android:layout_above="@id/message_text_layout_2"
                android:layout_below="@id/message_text_layout"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/default_avatar_img"/>

            <TextView
                android:id="@+id/message_text_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/text_message_background"
                android:fadeScrollbars="false"
                android:fontFamily="@font/nunito_semibold"
                android:text="Message"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_below="@id/message_text_layout"
                android:layout_marginStart="50dp"/>
            <ImageView
                android:id="@+id/sent_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/message_text_layout_2"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/default_avatar_img"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>